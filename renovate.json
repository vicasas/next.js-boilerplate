{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "labels": ["dependencies"],
  "prHourlyLimit": 10,
  "semanticCommits": "enabled",
  "commitMessageAction": "Bump",
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "from {{currentValue}} to {{newValue}}",
  "commitMessageLowerCase": "never",
  "rangeStrategy": "bump",
  "schedule": ["before 6am on Sunday"],
  "timezone": "UTC",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 6am on the first day of the month"]
  },
  "packageRules": [
    {
      "description": ["Apply 'chore' type for semantic commits on all files"],
      "matchFileNames": ["**/*"],
      "semanticCommitType": "chore"
    },
    {
      "description": ["Update .nvmrc file"],
      "groupName": "node",
      "matchManagers": ["nvm"],
      "matchFileNames": [".nvmrc"],
      "allowedVersions": "^20 || ^22"
    },
    {
      "description": ["Restrict updates for @types/node"],
      "groupName": "node",
      "matchPackageNames": ["@types/node"],
      "allowedVersions": "^20 || ^22"
    },
    {
      "description": ["Disable updates for engines in packages.json"],
      "matchPackageNames": ["node"],
      "matchDepTypes": ["engines"],
      "enabled": false
    }
  ]
}
